pipeline {
    agent {
        docker {
            image 'docker:latest'
            args '-v /var/run/docker.sock:/var/run/docker.sock'
        }
    }
    
    stages {
        stage('Run Hello World') {
            steps {
                script {
                    sh 'docker --version'
                    
                    sh 'ls'
                    // Set DOCKER_TLS_VERIFY to 0 to disable TLS verification
                    env.DOCKER_TLS_VERIFY = '0'
                    
                    // Run hello-world Docker container
                    sh 'docker run -d hello-world'
                }
            }
        }
        
        // Add more stages as needed
    }
}
